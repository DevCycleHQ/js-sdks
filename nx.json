{
  "extends": "nx/presets/npm.json",
  "npmScope": "devcycle",
  "workspaceLayout": {
    "libsDir": "",
    "appsDir": ""
  },
  "implicitDependencies": {
    "package.json": {
      "dependencies": "*",
      "devDependencies": "*"
    },
    ".eslintrc.json": "*",
    ".circleci/config.yml": "*"
  },
  "pluginsConfig": {
    "@nrwl/js": {
      "analyzeSourceFiles": true
    }
  },
  "tasksRunnerOptions": {
    "default": {
      "runner": "@nrwl/nx-cloud",
      "options": {
        "cacheableOperations": [
          "build",
          "test",
          "lint",
          "check-types",
          "package",
          "prepare"
        ],
        "parallel": 1,
        "accessToken": "Yjc5YzRjMmUtMWI4ZS00NWM3LWFhMDktNWM0ZTM0ZjdjMWFmfHJlYWQtd3JpdGU="
      }
    }
  },
  "affected": {
    "defaultBase": "main"
  },
  "cli": {
    "defaultCollection": "@nrwl/js"
  },
  "generators": {
    "@nrwl/web:application": {
      "style": "css",
      "linter": "eslint",
      "unitTestRunner": "jest",
      "e2eTestRunner": "cypress"
    },
    "@nrwl/web:library": {
      "style": "css",
      "linter": "eslint",
      "unitTestRunner": "jest"
    },
    "@nrwl/react": {
      "application": {
        "style": "css",
        "linter": "eslint",
        "babel": true
      },
      "component": {
        "style": "css"
      },
      "library": {
        "style": "css",
        "linter": "eslint"
      }
    },
    "@nrwl/next": {
      "application": {
        "style": "css",
        "linter": "eslint"
      }
    }
  },
  "defaultProject": "react",
  "$schema": "./node_modules/nx/schemas/nx-schema.json",
  "targetDefaults": {
    "build": {
      "dependsOn": [
        "^build"
      ]
    },
    "prepare": {
      "dependsOn": [
        "^prepare"
      ]
    },
    "package": {
      "dependsOn": [
        "^package"
      ]
    },
    "npm-publish": {
      "dependsOn": [
        {
          "projects": "dependencies",
          "target": "npm-publish",
          "params": "forward"
        },
        "build"
      ]
    }
  }
}
