{
    "name": "debugger",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "lib/web-debugger",
    "projectType": "library",
    "targets": {
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/lib/web-debugger",
                "main": "lib/web-debugger/index.ts",
                "additionalEntryPoints": [
                    "lib/web-debugger/react.tsx",
                    "lib/web-debugger/next.tsx"
                ],
                "tsConfig": "lib/web-debugger/tsconfig.lib.json",
                "format": ["esm"],
                "platform": "browser",
                "bundle": true,
                "declaration": true,
                "sourcemap": true,
                "assets": [
                    "lib/web-debugger/*.md",
                    "lib/web-debugger/package.json"
                ],
                "external": [
                    "@devcycle/types",
                    "@devcycle/js-client-sdk",
                    "@devcycle/nextjs-sdk",
                    "@devcycle/react-client-sdk",
                    "react",
                    "react/*"
                ],
                "esbuildOptions": {
                    "outExtension": { ".js": ".js" }
                }
            }
        },
        "npm-publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "../../../scripts/npm-safe-publish.sh \"@devcycle/web-debugger\"",
                "cwd": "dist/lib/web-debugger",
                "forwardAllArgs": true
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "lib/web-debugger/**/*.ts",
                    "lib/web-debugger/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "lib/web-debugger/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "check-types": {
            "executor": "nx:run-commands",
            "options": {
                "command": "yarn run -T tsc -b --incremental",
                "cwd": "lib/web-debugger"
            }
        }
    },
    "tags": []
}
