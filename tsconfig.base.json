{
  "compileOnSave": false,
  "compilerOptions": {
    "rootDir": ".",
    "sourceMap": true,
    "declaration": false,
    "moduleResolution": "node",
    "emitDecoratorMetadata": true,
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "noImplicitAny": true,
    "importHelpers": true,
    "target": "es2015",
    "module": "esnext",
    "lib": [
      "es2019",
      "dom"
    ],
    "resolveJsonModule": true,
    "skipLibCheck": true,
    "skipDefaultLibCheck": true,
    "strictNullChecks": true,
    "strictPropertyInitialization": false,
    "baseUrl": ".",
    "paths": {
      "@devcycle/devcycle-js-sdk": [
        "sdk/js/src/index.ts"
      ],
      "@devcycle/devcycle-react-sdk": [
        "sdk/react/src/index.ts"
      ],
      "@devcycle/nodejs-server-sdk": [
        "sdk/nodejs-server-sdk/src/index.ts"
      ],
      "@devcycle/shared/bucketing": [
        "lib/shared/bucketing/src/index.ts"
      ],
      "@devcycle/types": [
        "lib/shared/types/src/index.ts"
      ]
    }
  },
  "exclude": [
    "node_modules",
    "tmp"
  ]
}
