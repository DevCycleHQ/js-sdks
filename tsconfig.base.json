{
    "compileOnSave": false,
    "compilerOptions": {
        "rootDir": ".",
        "sourceMap": true,
        "inlineSources": true,
        "declaration": false,
        "moduleResolution": "node16",
        "emitDecoratorMetadata": true,
        "esModuleInterop": true,
        "experimentalDecorators": true,
        "noImplicitAny": true,
        "importHelpers": false,
        "target": "es2019",
        "module": "node16",
        "lib": ["es2019", "dom"],
        "resolveJsonModule": true,
        "skipLibCheck": true,
        "skipDefaultLibCheck": true,
        "strictNullChecks": true,
        "strictPropertyInitialization": false,
        "baseUrl": ".",
        "paths": {
            "@devcycle/bucketing": ["lib/shared/bucketing/src/index.ts"],
            "@devcycle/bucketing-test-data": [
                "lib/shared/bucketing-test-data/src/index.ts"
            ],
            "@devcycle/js-client-sdk": ["sdk/js/src/index.ts"],
            "@devcycle/nodejs-server-sdk": ["sdk/nodejs/src/index.ts"],
            "@devcycle/openfeature-nodejs-provider": [
                "sdk/openfeature-nodejs-provider/src/index.ts"
            ],
            "@devcycle/react-client-sdk": ["sdk/react/src/index.ts"],
            "@devcycle/react-native-client-sdk": [
                "sdk/react-native/src/index.ts"
            ],
            "@devcycle/types": ["lib/shared/types/src/index.ts"]
        }
    },
    "exclude": ["node_modules", "tmp"]
}
