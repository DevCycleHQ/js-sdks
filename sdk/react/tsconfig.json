{
  "compilerOptions": {
    "module": "commonjs",
    "lib":["es6", "DOM"],
    "target":"es5",
    "declaration": true,
    "noImplicitAny": true,
    "preserveConstEnums": true,
    "sourceMap": true,
    "esModuleInterop": true,
    "outDir":"./dist/",
    "jsx": "react",
    "skipLibCheck": true
  },
  "include": ["src/*"],
  "exclude": ["node_modules", "**/*.spec.ts"]
}
