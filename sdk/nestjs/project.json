{
    "name": "nestjs",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "sdk/nestjs/src",
    "targets": {
        "check-types": {
            "executor": "nx:run-commands",
            "inputs": [
                "{projectRoot}/src/**/*.ts",
                "{projectRoot}/tsconfig*.json"
            ],
            "options": {
                "command": "yarn run -T tsc -b --incremental",
                "cwd": "sdk/nestjs"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "sdk/nestjs/**/*.ts",
                    "sdk/nestjs/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/sdk/nestjs"],
            "options": {
                "jestConfig": "sdk/nestjs/jest.config.ts",
                "passWithNoTests": false,
                "codeCoverage": true
            },
            "dependsOn": [
                {
                    "target": "build"
                }
            ]
        },
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/sdk/nestjs",
                "main": "sdk/nestjs/src/index.ts",
                "tsConfig": "sdk/nestjs/tsconfig.lib.json",
                "platform": "node",
                "bundle": true,
                "packages": "external",
                "format": ["cjs"],
                "external": [
                    "@devcycle/nodejs-server-sdk",
                    "@devcycle/types"
                ],
                "assets": ["sdk/nestjs/*.md"]
            },
            "dependsOn": [
                {
                    "target": "build",
                    "dependencies": true
                }
            ]
        },
        "npm-publish": {
            "executor": "nx:run-commands",
            "cache": false,
            "options": {
                "command": "../../../scripts/npm-safe-publish.sh \"@devcycle/nestjs-server-sdk\"",
                "cwd": "dist/sdk/nestjs",
                "forwardAllArgs": true
            }
        }
    },
    "tags": []
}
