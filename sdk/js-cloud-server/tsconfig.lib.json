{
    "extends": "./tsconfig.json",
    "compilerOptions": {
        "outDir": "../../dist/out-tsc",
        "declaration": true,
        "declarationMap": true,
        "sourceMap": true,
        "types": ["node"],
        "module": "NodeNext",
        "moduleResolution": "NodeNext",
        "target": "ES2022",
        "lib": ["ES2022"],
        "strict": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "skipLibCheck": true
    },
    "exclude": [
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/__mocks__/**/*.ts",
        "jest.config.ts"
    ],
    "include": ["**/*.ts"]
}
