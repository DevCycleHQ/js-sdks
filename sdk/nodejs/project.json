{
    "name": "nodejs",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "implicitDependencies": [
        "shared-bucketing-as",
        "shared-bucketing-test-data"
    ],
    "targets": {
        "check-types": {
            "executor": "nx:run-commands",
            "options": {
                "command": "yarn run -T tsc -b --incremental",
                "cwd": "sdk/nodejs"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "sdk/nodejs/**/*.ts",
                    "sdk/nodejs/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/sdk/nodejs"],
            "options": {
                "jestConfig": "sdk/nodejs/jest.config.ts",
                "passWithNoTests": false,
                "codeCoverage": true
            },
            "dependsOn": [
                {
                    "target": "build"
                },
                {
                    "target": "build:json",
                    "dependencies": true
                }
            ]
        },
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/sdk/nodejs",
                "tsConfig": "sdk/nodejs/tsconfig.lib.json",
                "main": "sdk/nodejs/src/index.ts",
                "additionalEntryPoints": ["sdk/nodejs/openfeature-strategy.ts"],
                "format": ["cjs"],
                "platform": "node",
                "bundle": true,
                "declaration": true,
                "sourcemap": true,
                "assets": ["sdk/nodejs/*.md", "sdk/nodejs/package.json"],
                "external": [
                    "@devcycle/types",
                    "@devcycle/bucketing-assembly-script",
                    "@devcycle/js-cloud-server-sdk",
                    "@devcycle/js-client-sdk",
                    "@openfeature/*",
                    "cross-fetch",
                    "eventsource",
                    "fetch-retry"
                ],
                "esbuildOptions": {
                    "outExtension": {
                        ".js": ".js"
                    }
                }
            }
        },
        "npm-publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "../../../scripts/npm-safe-publish.sh \"@devcycle/nodejs-server-sdk\"",
                "cwd": "dist/sdk/nodejs",
                "forwardAllArgs": true
            }
        }
    },
    "tags": []
}
