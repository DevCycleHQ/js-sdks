{
    "name": "nodejs",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "implicitDependencies": [
        "shared-bucketing-as",
        "shared-bucketing-test-data"
    ],
    "targets": {
        "check-types": {
            "executor": "nx:run-commands",
            "inputs": [
                "{projectRoot}/src/**/*.ts",
                "{projectRoot}/tsconfig*.json"
            ],
            "options": {
                "command": "yarn run -T tsc -b --incremental",
                "cwd": "sdk/nodejs"
            }
        },
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "sdk/nodejs/**/*.ts",
                    "sdk/nodejs/package.json"
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/sdk/nodejs"],
            "options": {
                "jestConfig": "sdk/nodejs/jest.config.ts",
                "passWithNoTests": false,
                "codeCoverage": true
            },
            "dependsOn": [
                {
                    "target": "build"
                },
                {
                    "target": "build:json",
                    "dependencies": true
                }
            ]
        },
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/sdk/nodejs",
                "main": "sdk/nodejs/src/index.ts",
                "additionalEntryPoints": ["sdk/nodejs/openfeature-strategy.ts"],
                "tsConfig": "sdk/nodejs/tsconfig.lib.json",
                "platform": "node",
                "bundle": true,
                "packages": "external",
                "format": ["cjs", "esm"],
                "target": "node18",
                "conditions": ["node"],
                "mainFields": ["module", "main"],
                "external": [
                    "@devcycle/bucketing-assembly-script",
                    "@devcycle/js-client-sdk",
                    "@devcycle/js-cloud-server-sdk",
                    "@devcycle/types"
                ],
                "assets": ["sdk/nodejs/*.md"],
                "outExtension": {
                    ".js": ".cjs"
                },
                "splitting": false,
                "keepNames": true,
                "sourcemap": true
            },
            "dependsOn": [
                {
                    "target": "build",
                    "dependencies": true
                }
            ]
        },
        "npm-publish": {
            "executor": "nx:run-commands",
            "cache": false,
            "options": {
                "command": "../../../scripts/npm-safe-publish.sh \"@devcycle/nodejs-server-sdk\"",
                "cwd": "dist/sdk/nodejs",
                "forwardAllArgs": true
            }
        }
    },
    "tags": []
}