{
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "sdk/nodejs/src",
  "implicitDependencies": [
    "shared-bucketing-as",
    "shared-bucketing-test-data"
  ],
  "targets": {
    "check-types": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "yarn run -T tsc -b --incremental",
        "cwd": "sdk/nodejs"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "sdk/nodejs/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
          "coverage/sdk/nodejs"
      ],
      "options": {
          "jestConfig": "sdk/nodejs/jest.config.ts",
          "passWithNoTests": false,
          "codeCoverage": true
      },
      "dependsOn": [
          {
              "target": "build",
              "projects": "self"
          },
          {
              "target": "build:json",
              "projects": "dependencies"
          }
      ]
    },
    "compile-pb": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
          "commands": [
              {
                  "command": "rm -rf compiled.js compiled.d.ts"
              },
              {
                  "command": "pbjs -t static-module --keep-case -w commonjs -o compiled.js ../../../../lib/shared/bucketing-assembly-script/protobuf/*.proto"
              },
              {
                  "command": "pbts -o compiled.d.ts compiled.js"
              }
          ],
          "cwd": "sdk/nodejs/src/pb-types",
          "parallel": false
      }
    },
    "build": {
      "executor": "@nrwl/js:tsc",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "dist/sdk/nodejs",
        "tsConfig": "sdk/nodejs/tsconfig.lib.json",
        "packageJson": "sdk/nodejs/package.json",
        "buildableProjectDepsInPackageJsonType": "dependencies",
        "main": "sdk/nodejs/src/index.ts",
        "assets": [
          "sdk/nodejs/*.md"
        ]
      },
      "dependsOn": [
        {
            "target": "compile-pb",
            "projects": "self"
        },
        {
            "target": "build",
            "projects": "dependencies"
        }
      ]
    },
    "npm-publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "../../../scripts/npm-safe-publish.sh \"@devcycle/nodejs-server-sdk\"",
        "cwd": "dist/sdk/nodejs",
        "forwardAllArgs": true
      }
    }
  },
  "tags": []
}
