{
  "root": "sdk/js",
  "sourceRoot": "sdk/js/src",
  "implicitDependencies": [],
  "targets": {
    "npm-publish": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "yarn build && ../../scripts/npm-publish-check.sh \"@devcycle/devcycle-js-sdk\"",
        "cwd": "sdk/js"
      }
    },
    "check-types": {
      "executor": "@nrwl/workspace:run-commands",
      "options": {
        "command": "yarn run -T tsc -b --incremental",
        "cwd": "sdk/js"
      }
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": [
        "{options.outputFile}"
      ],
      "options": {
        "lintFilePatterns": [
          "sdk/js/**/*.ts"
        ]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": [
        "coverage/sdk/js"
      ],
      "options": {
        "jestConfig": "sdk/js/jest.config.js",
        "passWithNoTests": true,
        "cwd": "sdk/js"
      }
    },
    "build": {
      "executor": "@nrwl/node:build",
      "outputs": [
        "{options.outputPath}"
      ],
      "options": {
        "outputPath": "sdk/js/dist",
        "main": "sdk/js/src/index.ts",
        "tsConfig": "sdk/js/tsconfig.lib.json"
      },
      "configurations": {
        "production": {
          "optimization": true,
          "extractLicenses": false,
          "inspect": false
        }
      }
    }
  }
}
