{
    "extends": ["../../.eslintrc.json"],
    "ignorePatterns": ["!**/*", "dev-apps/**/*", "node_modules/*"],
    "overrides": [
        {
            "files": ["*.json"],
            "parser": "jsonc-eslint-parser",
            "rules": {
                "@nx/dependency-checks": [
                    "error",
                    {
                        "ignoredDependencies": ["@nx/webpack"]
                    }
                ]
            }
        },
        {
            "files": ["*.ts", "*.tsx", "*.js", "*.jsx"],
            "rules": {}
        },
        {
            "files": ["*.ts", "*.tsx"],
            "rules": {}
        },
        {
            "files": ["*.js", "*.jsx"],
            "rules": {}
        }
    ]
}
