{
    "name": "nextjs",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "projectType": "library",
    "tags": [],
    "targets": {
        "lint": {
            "executor": "@nx/eslint:lint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "sdk/nextjs/**/*.{ts,tsx,js,jsx}",
                    "sdk/nextjs/package.json"
                ]
            }
        },
        "build": {
            "executor": "@nx/esbuild:esbuild",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/sdk/nextjs",
                "tsConfig": "sdk/nextjs/tsconfig.lib.json",
                "main": "sdk/nextjs/index.ts",
                "additionalEntryPoints": [
                    "sdk/nextjs/server.ts",
                    "sdk/nextjs/pages.ts"
                ],
                "format": ["cjs"],
                "platform": "node",
                "bundle": true,
                "declaration": true,
                "sourcemap": true,
                "assets": [
                    "sdk/nextjs/README.md",
                    "sdk/nextjs/package.json"
                ],
                "external": [
                    "@devcycle/bucketing",
                    "@devcycle/js-client-sdk",
                    "@devcycle/react-client-sdk",
                    "@devcycle/types",
                    "class-transformer",
                    "hoist-non-react-statics",
                    "server-only",
                    "next",
                    "next/*",
                    "react",
                    "react/*"
                ],
                "esbuildOptions": {
                    "outExtension": { ".js": ".js" }
                }
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "sdk/nextjs/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        },
        "npm-publish": {
            "executor": "nx:run-commands",
            "options": {
                "command": "../../../scripts/npm-safe-publish.sh \"@devcycle/nextjs-sdk\"",
                "cwd": "dist/sdk/nextjs",
                "forwardAllArgs": true
            }
        },
        "check-types": {
            "executor": "nx:run-commands",
            "options": {
                "command": "yarn run -T tsc -b --incremental",
                "cwd": "sdk/nextjs"
            }
        }
    }
}
