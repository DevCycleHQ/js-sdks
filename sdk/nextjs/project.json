{
    "name": "nextjs",
    "$schema": "../../node_modules/nx/schemas/project-schema.json",
    "sourceRoot": "sdk/nextjs/src",
    "projectType": "library",
    "tags": [],
    "targets": {
        "lint": {
            "executor": "@nx/linter:eslint",
            "outputs": ["{options.outputFile}"],
            "options": {
                "lintFilePatterns": [
                    "sdk/nextjs/**/*.{ts,tsx,js,jsx}",
                    "sdk/nextjs/package.json"
                ]
            }
        },
        "build": {
            "executor": "@nx/rollup:rollup",
            "outputs": ["{options.outputPath}"],
            "options": {
                "outputPath": "dist/sdk/nextjs",
                "tsConfig": "sdk/nextjs/tsconfig.lib.json",
                "project": "sdk/nextjs/package.json",
                "entryFile": "sdk/nextjs/src/index.ts",
                "external": ["react", "react-dom", "react/jsx-runtime"],
                "rollupConfig": "@nx/react/plugins/bundle-rollup",
                "compiler": "swc",
                "assets": [
                    {
                        "glob": "nextjs/README.md",
                        "input": ".",
                        "output": "."
                    }
                ]
            }
        },
        "test": {
            "executor": "@nx/jest:jest",
            "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
            "options": {
                "jestConfig": "sdk/nextjs/jest.config.ts",
                "passWithNoTests": true
            },
            "configurations": {
                "ci": {
                    "ci": true,
                    "codeCoverage": true
                }
            }
        }
    }
}
